source 'https://rubygems.org'

# ruby web server
gem 'sinatra', git: 'git@github.com:sinatra/sinatra.git'

# json transformers
gem 'json'

# active record support
gem 'activerecord'
gem 'sinatra-activerecord'
gem 'sqlite3'

# mongo support
gem 'mongo_mapper'
gem 'bson_ext'

# rspec + rest testing
group :development, :test do
  gem 'rspec'
  gem 'rack-test'
  gem 'simplecov'
end


